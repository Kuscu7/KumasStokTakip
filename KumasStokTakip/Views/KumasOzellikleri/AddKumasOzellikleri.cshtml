@model KumasStokTakip.Models.Entity.KumasOzellikleri
@{
    ViewBag.Title = "AddKumasOzellikleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2>Yeni Kumaş Özelliği Ekleme</h2>

<form method="post">

    <div class="form-group">
        @Html.Label("Top Sayısı")
        @Html.TextBoxFor(x => x.TopSayisi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.TopSayisi)
        <br />
        <br />
        @Html.Label("Metre")
        @Html.TextBoxFor(x => x.Metre, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Metre)
        <br />
        @Html.Label("Renk")
        @Html.TextBoxFor(x => x.Renk, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.Renk)
        <br />
        @Html.Label("Kumas Tipi")
        @Html.DropDownListFor(x => x.KumasTipiID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })


        <br /><br />



        <button class="btn btn-info"> Kaydet</button>
    </div>
</form>
