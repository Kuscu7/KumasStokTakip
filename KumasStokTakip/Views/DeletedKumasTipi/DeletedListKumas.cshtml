@using KumasStokTakip.Models.Entity
@model List<Tbl_KumasTipi>
@{
    ViewBag.Title = "DeletedListKumas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2> Silinen Kumaşlar Sayfası</h2>

@using (Html.BeginForm("DeletedListKumas", "DeletedKumasTipi", FormMethod.Get))
{
    <p>
        Aranacak Kumaş Tipi:@Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>

}
<br />
<br />
<br />

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kumaş Adı</th>
        <th>Yeniden Ekle</th>


    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KumasAdi</td>
            <td><a href="/DeletedKumasTipi/UpdateDeletedKumas/@item.ID" class="btn btn-info">Yeniden Ekle</a></td>

        </tr>
    }

</table>
<br />

