@model KumasStokTakip.Models.Entity.Tbl_KumasTipi
@{
    ViewBag.Title = "AddKumas";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Kumaş Ekleme</h2>


@using (Html.BeginForm("AddKumas", "KumasTipi", FormMethod.Post))
{ 
    <div class="form-group">
        @Html.Label("Kumas Adı")
        @Html.TextBoxFor(x => x.KumasAdi, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.KumasAdi)
        <br />
        <br />
        @Html.Label("Tip Adı")
        @Html.DropDownListFor(x => x.TipID, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })


        <br /><br />



        <button class="btn btn-info"> Kaydet</button>
    </div>
}


